                                                                    </item>

                                                                    <item name="payever_paymill_directdebit" xsi:type="array">
                                                                        <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    </item>

                                                                    <item name="payever_sofort" xsi:type="array">
