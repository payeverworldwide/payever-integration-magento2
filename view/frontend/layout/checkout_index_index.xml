                                                                        <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    </item>

                                                                    <item name="payever_payex_faktura" xsi:type="array">
                                                                        <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    </item>

                                                                    <item name="payever_payex_creditcard" xsi:type="array">
                                                                        <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    </item>
